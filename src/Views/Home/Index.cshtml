@{
    ViewData["Title"] = "Welcome to SmartPlanner";
}

<!-- Hero Section -->
<div class="container-fluid bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-calendar-check me-3"></i>
                    SmartPlanner
                </h1>
                <p class="lead mb-4">
                    Your personal academic companion. Organize tasks, manage subjects, and stay on top of your studies with our intuitive planning platform.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Authentication" asp-action="Register" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-user-plus me-2"></i>Get Started Free
                    </a>
                    <a asp-controller="Authentication" asp-action="Login" class="btn btn-outline-light btn-lg px-4">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-graduation-cap fa-10x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold text-primary mb-3">Why Choose SmartPlanner?</h2>
            <p class="lead text-muted">Everything you need to succeed academically, all in one place</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-primary mb-3">
                        <i class="fas fa-tasks fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Task Management</h5>
                    <p class="card-text text-muted">
                        Create, organize, and track your assignments and projects with ease. Never miss a deadline again.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-success mb-3">
                        <i class="fas fa-book fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Subject Organization</h5>
                    <p class="card-text text-muted">
                        Keep all your subjects organized with dedicated spaces for notes, assignments, and schedules.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="text-info mb-3">
                        <i class="fas fa-chart-line fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold">Progress Tracking</h5>
                    <p class="card-text text-muted">
                        Monitor your academic progress with visual dashboards and insightful analytics.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h3 class="fw-bold text-primary mb-4">Start Your Journey to Academic Success</h3>
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success me-3"></i>
                        <strong>Stay Organized:</strong> Keep all your academic life in one place
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success me-3"></i>
                        <strong>Meet Deadlines:</strong> Never miss an important assignment again
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success me-3"></i>
                        <strong>Track Progress:</strong> See how you're improving over time
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-success me-3"></i>
                        <strong>Reduce Stress:</strong> Feel confident and in control of your studies
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 text-center">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="bg-white p-4 rounded shadow-sm">
                            <i class="fas fa-calendar-day fa-2x text-primary mb-2"></i>
                            <h6 class="fw-bold">Daily Planning</h6>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-white p-4 rounded shadow-sm">
                            <i class="fas fa-bell fa-2x text-warning mb-2"></i>
                            <h6 class="fw-bold">Smart Reminders</h6>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-white p-4 rounded shadow-sm">
                            <i class="fas fa-mobile-alt fa-2x text-info mb-2"></i>
                            <h6 class="fw-bold">Mobile Friendly</h6>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="bg-white p-4 rounded shadow-sm">
                            <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                            <h6 class="fw-bold">Secure & Private</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container py-5 text-center">
    <h3 class="fw-bold text-primary mb-4">Ready to Transform Your Academic Life?</h3>
    <p class="lead text-muted mb-4">Join thousands of students who are already using SmartPlanner to achieve their goals.</p>
    <a asp-controller="Authentication" asp-action="Register" class="btn btn-primary btn-lg px-5">
        <i class="fas fa-rocket me-2"></i>Start Planning Today
    </a>
</div>
